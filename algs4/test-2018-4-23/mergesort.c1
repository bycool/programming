#include <stdio.h>
#include <stdlib.h>

void mergearr(int* arr, int* tmp, int b, int c, int e ){
	int lb = b,le = c-1;
	int rb = c,re = e;
	int i = b;
	
	while(lb<=le && rb<=re){
		if(arr[lb]<=arr[rb])
			tmp[i++] = arr[lb++];
		else
			tmp[i++] = arr[rb++];
	}
	while(lb<=le){
		tmp[i++] = arr[lb++];
	}
	while(rb<=re){
		tmp[i++] = arr[rb++];
	}
	i = b;
	for(i=b;i<=e;i++){
		arr[i] = tmp[i];
	}
}

void display(int* arr, int len){
	int i = 0;
	for(i=0;i<len;i++){
		printf("%d,",arr[i]);
	}
	printf("\n");
}

void msort(int* arr, int* tmp, int b ,int e){
	int c;
	if(b<e){
		c = (b+e)/2;
//		printf("b:%d c:%d e:%d\n",b,c,e);
		msort(arr,tmp,b,c);
		msort(arr,tmp,c+1,e);
		mergearr(arr,tmp,b,c+1,e);
	}
}

